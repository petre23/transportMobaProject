
@{
    ViewBag.Title = "Soferi";
}
<script src="~/Scripts/Pages/workerController.js"></script>

<nav class="navbar navbar-inverse nav-bar">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand nav-bar-text" href="#">@ViewBag.Title</a>
        </div>
        <div class="button-group right-side">
            <div class="btn-group">
                <button class="btn btn-success" id="addButton" onclick="workerController.addNewWorker();"><span class="glyphicon glyphicon glyphicon-plus"></span> @Resources.Labels.Adauga</button>
                <button class="btn btn-success" id="editButton" disabled onclick="workerController.editWorker();"><span class="glyphicon glyphicon glyphicon-edit"></span> @Resources.Labels.Editeaza</button>
                <button class="btn btn-danger" id="deleteButton" disabled onclick="workerController.deleteWorker();"><span class="glyphicon glyphicon glyphicon-remove"></span> @Resources.Labels.Sterge</button>
            </div>
            <button class="btn btn-primary"><span class="glyphicon glyphicon-log-out"> @Html.ActionLink("Logout", "Logout", "Login", null, new { @class = "no-text-decoration" })  </span></button>
        </div>

    </div>
</nav>
<div class="row">
    <div class="col-md-12">
        <div id="workerGrid"></div>
    </div>
</div>
