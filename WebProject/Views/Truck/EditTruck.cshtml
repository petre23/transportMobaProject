@{
    ViewBag.Title = "Editare camion";
}
<script src="~/Scripts/Pages/editTruckController.js"></script>

<div class="row">
    <div class="col-md-12">
        <nav class="navbar navbar-inverse nav-bar">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a id="headerLabel" class="navbar-brand nav-bar-text" href="#"></a>
                </div>
            </div>
        </nav>
    </div>
</div>
<form name="saveTruck" class="edit-panel" onsubmit="editTruckController.validateAndSaveTruck();">
    <div id="generalInformation">
        <h3 class="details-header">Informatii generale</h3>
        <div class="row fields-padding">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label>@Resources.Labels.NumarInmatriculare</label>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" placeholder="NN-00-NNN" id="registrationNumber" type="text" required />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label>@Resources.Labels.Marca</label>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" list="brandsList" name="brands" id="brand" required>
                                    <datalist name="brandsList" id="brandsList">
                                        <option selected disabled hidden style='display: none' value=''></option>
                                        @foreach (var brand in ViewBag.BrandsForDropDown)
                                        {
                                            <option value="@brand.Name"></option>   
                                        }
                                    </datalist>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row fields-padding">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label>@Resources.Labels.AnFabricatie</label>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" id="registrationYear" placeholder="dd/MM/yyyy" type="text"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="expirationDetails">
        <h3 class="details-header">@Resources.Labels.ValabilitateActe</h3>
        <div class="row fields-padding">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label>@Resources.Labels.DataExpirareITP</label>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" placeholder="dd/MM/yyyy" id="ITPExpirationDate" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label>@Resources.Labels.DataExpirareAsigurare</label>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" placeholder="dd/MM/yyyy" id="insuranceExpirationDate" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row fields-padding">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label>@Resources.Labels.DataExpirareTahograf</label>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" placeholder="dd/MM/yyyy" id="tachographExpirationDate" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label>@Resources.Labels.DataExpirareCopieConforma</label>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" placeholder="dd/MM/yyyy" id="conformCopyExpirationDate" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row fields-padding">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label>@Resources.Labels.DataExpirareVignetteUK</label>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" placeholder="dd/MM/yyyy" id="vignetteExpirationDateUK" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label>@Resources.Labels.DataExpirareVignetteNL</label>
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" placeholder="dd/MM/yyyy" id="vignetteExpirationDateNL" type="text" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row" id="saveButtons">
        <div class="col-sm-9 col-lg-9 col-md-9"></div>
        <div class="col-sm-3 col-lg-3 col-md-3">
            <div class="btn-group right-side">
                <button type="submit" id="btnSaveTruck" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> @Resources.Labels.Salvare</button>
                <button type="button" onclick="editTruckController.cancelEdit();" id="btnCancelSaveTruck" class="btn btn-danger"><span class="glyphicon glyphicon glyphicon-remove"></span> @Resources.Labels.Anulare</button>
            </div>
        </div>
    </div>
</form>

<script>
    function addLoadEvent(func) {
        var oldonload = window.onload;
        if (typeof window.onload != 'function') {
            window.onload = func;
        } else {
            window.onload = function () {
                if (oldonload) {
                    oldonload();
                }
                func();
            }
        }
    }

    addLoadEvent(function () {
        if (editTruckController.truckId) {
            document.getElementById('headerLabel').innerHTML = 'Editare camion';
        } else {
            document.getElementById('headerLabel').innerHTML = 'Adaugare camion';
        }

    });
</script>