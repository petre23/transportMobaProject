@{
    ViewBag.Title = "Editare camion";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="~/Scripts/Pages/editTruckController.js"></script>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <nav class="navbar navbar-inverse nav-bar">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a id="headerLabel" class="navbar-brand nav-bar-text" href="#"></a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <form name="saveTruck" class="edit-panel" onsubmit="editTruckController.validateAndSaveTruck();">
        <div id="generalInformation">
            <h3 class="details-header">Informatii generale</h3>
            <div class="row fields-padding">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-6">
                                        <label>@Resources.Labels.NumarInmatriculare</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input class="min-input-width min-input-height" placeholder="NN-00-NNN" id="registrationNumber" type="text" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-6">
                                        <label>@Resources.Labels.Marca</label>
                                    </div>
                                    <div class="col-md-6">
                                        <select class="min-input-width min-input-height" name="brands" id="brands" required>
                                            <option value="1">Iveco Stralis</option>
                                            <option value="2">Renault Premium</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row fields-padding">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-6">
                                        <label>@Resources.Labels.DataExpirareCopieConforma</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input class="min-input-width min-input-height" id="registrationYear" placeholder="yyyy" type="number" max="3000" maxlength="4" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="expirationDetails">
            <h3 class="details-header">@Resources.Labels.ValabilitateActe</h3>
            <div class="row fields-padding">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-6">
                                        <label>@Resources.Labels.DataExpirareITP</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input class="min-input-width min-input-height" placeholder="dd/MM/yyyy" id="ITPExpirationDate" type="text" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-6">
                                        <label>@Resources.Labels.DataExpirareAsigurare</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input class="min-input-width min-input-height" placeholder="dd/MM/yyyy" id="insuranceExpirationDate" type="text" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row fields-padding">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-6">
                                        <label>@Resources.Labels.DataExpirareTahograf</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input class="min-input-width min-input-height" placeholder="dd/MM/yyyy" id="tachographExpirationDate" type="text" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-6">
                                        <label>@Resources.Labels.DataExpirareVignette</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input class="min-input-width min-input-height" placeholder="dd/MM/yyyy" id="vignetteExpirationDate" type="text" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row fields-padding">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-6">
                                        <label>@Resources.Labels.DataExpirareCopieConforma</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input class="min-input-width min-input-height" placeholder="dd/MM/yyyy" id="conformCopyExpirationDate" type="text" required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row button-group">
            <div class="col-md-9"></div>
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-5">
                        <button type="submit" id="btnSaveTruck" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> Salvare</button>
                    </div>
                    <div class="col-md-5">
                        <button type="button" onclick="editTruckController.cancelEdit();" id="btnCancelSaveTruck" class="btn btn-danger"><span class="glyphicon glyphicon glyphicon-remove"></span>Anulare</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function addLoadEvent(func) {
        var oldonload = window.onload;
        if (typeof window.onload != 'function') {
            window.onload = func;
        } else {
            window.onload = function () {
                if (oldonload) {
                    oldonload();
                }
                func();
            }
        }
    }

    addLoadEvent(function () {
        if (editTruckController.truckId) {
            document.getElementById('headerLabel').innerHTML = 'Editare camion';
        } else {
            document.getElementById('headerLabel').innerHTML = 'Adaugare camion';
        }

    });
</script>