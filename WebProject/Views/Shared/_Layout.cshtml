<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
    @Scripts.Render("~/bundles/jsGrid")
    @Styles.Render("~/Content/cssGrid")
</head>
<body class="zero-space-body">
    <div class="container-fluid">
        <div class="row">
            @if (HttpContext.Current.Session["UserId"] != null)
            {
                <div class="col-md-2 left-sidebar">
                    <ul id="sidebar">
                        <li class="black-border" style="font-size: 26px; font-weight:bold;"><a>Meniu</a></li>
                        <li class="black-border">@Html.ActionLink("Acasa", "Index", "Truck")</li>
                        <li class="black-border">@Html.ActionLink("Camioane", "Index", "Truck")</li>
                        <li class="black-border">@Html.ActionLink("Soferi", "Index", "Worker")</li>
                        <li class="black-border">@Html.ActionLink("Curse", "Index", "Drive")</li>
                        <li class="black-border">@Html.ActionLink("Adauga Utilizator", "Index", "Users")</li>

                    </ul>
                </div>
            }
            <div class="@(HttpContext.Current.Session["UserId"] != null ? "col-md-10" : "co-md-12")">
                <div id="errorDialog" title="Error"></div>
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $("#errorDialog").dialog({
            autoOpen: false,
            maxHeight: 500,
        }).prev(".ui-dialog-titlebar").css("background", "red");
    </script>
</body>
</html>
